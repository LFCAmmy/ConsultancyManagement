<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/consultancy_whole_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        fancy:cardBackgroundColor="#ffffffff"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <ImageView
                android:id="@+id/consultancy_logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner" />

            <TextView
                android:id="@+id/consultancy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/consultancy_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:text="Consultancy Name"
                android:textColor="@color/primary_text"
                android:textSize="18sp" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_enquiry"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@id/consultancy_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textAllCaps="true"
                fancy:fb_borderColor="@color/login_btn_color"
                fancy:fb_borderWidth="1dp"
                fancy:fb_defaultColor="#ddffffff"
                fancy:fb_focusColor="@color/login_btn_color"
                fancy:fb_radius="@dimen/medium_padding"
                fancy:fb_text="Send Enquiry"
                fancy:fb_textColor="@color/login_btn_color" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>