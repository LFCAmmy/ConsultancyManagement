<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/my_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/medium_padding"
                android:fontFamily="@font/nunito_semibold"
                android:text="My Details"
                android:textColor="@color/primary_text"
                android:textSize="25sp" />


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/my_details"
                android:layout_marginTop="@dimen/medium_padding"
                android:orientation="vertical"
                android:padding="@dimen/medium_padding">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Qualification"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />


                    <TextView
                        android:id="@+id/qualification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Qualification"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Complete Year"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/complete_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Complete Year"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Apply Course"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/interested_course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Apply Course"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Apply Country"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Apply Country"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Test Attended"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                    <TextView
                        android:id="@+id/test_attended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Test Attended"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#44111111" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_margin">

                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Summary"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />


                    <TextView
                        android:id="@+id/summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Summary"
                        android:textColor="@color/primary_text"
                        android:textSize="13.5sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_extra_large_padding">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btn_edit"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:textAllCaps="true"
                        fancy:fb_borderColor="@color/login_btn_color"
                        fancy:fb_borderWidth="1dp"
                        android:layout_alignParentStart="true"
                        fancy:fb_defaultColor="@color/colorTransparent"
                        fancy:fb_focusColor="@color/login_btn_color"
                        fancy:fb_radius="@dimen/small_margin"
                        fancy:fb_text="Edit"
                        fancy:fb_textColor="@color/login_btn_color" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/btn_send"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:gravity="center"
                        android:textAllCaps="true"
                        fancy:fb_borderColor="@color/login_btn_color"
                        fancy:fb_borderWidth="1dp"
                        android:layout_alignParentEnd="true"
                        fancy:fb_defaultColor="@color/colorTransparent"
                        fancy:fb_focusColor="@color/login_btn_color"
                        fancy:fb_radius="@dimen/small_margin"
                        fancy:fb_text="Send"
                        fancy:fb_textColor="@color/login_btn_color" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>