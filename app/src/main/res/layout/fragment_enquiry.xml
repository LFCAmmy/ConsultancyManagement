<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.EnquiryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_above="@id/relative"
        android:layout_alignParentTop="true">


            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_padding"
                android:layout_marginTop="@dimen/medium_padding"
                android:layout_marginRight="@dimen/medium_padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sending_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/primary_text"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Sending To "/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_design"
                    android:orientation="vertical"
                    android:padding="@dimen/medium_padding">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/my_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_below="@id/sending_to"
                            android:padding="5dp"
                            android:text="My Profile"
                            android:textColor="@color/primary_text"
                            android:textSize="25sp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:orientation="horizontal"
                        android:padding="@dimen/small_margin">

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Qualification"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />


                        <TextView
                            android:id="@+id/qualification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/medium_padding"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Qualification"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#44111111" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/small_margin">

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Complete Year"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                        <TextView
                            android:id="@+id/complete_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/medium_padding"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Complete Year"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#44111111" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/small_margin">

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Apply Course"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                        <TextView
                            android:id="@+id/interested_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/medium_padding"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Apply Course"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#44111111" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/small_margin">

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Apply Country"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                        <TextView
                            android:id="@+id/destination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/medium_padding"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Apply Country"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#44111111" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/small_margin">

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Test Attended"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                        <TextView
                            android:id="@+id/test_attended"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/medium_padding"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Test Attended"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#44111111" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/small_margin">

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Summary"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />


                        <TextView
                            android:id="@+id/summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="@dimen/medium_padding"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Summary"
                            android:textColor="@color/primary_text"
                            android:textSize="13.5sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#44111111" />

                </LinearLayout>

            </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:padding="@dimen/medium_padding">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:textAllCaps="true"
            fancy:fb_borderColor="@color/login_btn_color"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/colorTransparent"
            fancy:fb_focusColor="@color/login_btn_color"
            fancy:fb_radius="@dimen/small_margin"
            fancy:fb_text="Edit Info"
            fancy:fb_textColor="@color/login_btn_color" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/send_inquiry"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:textAllCaps="true"
            fancy:fb_borderColor="@color/login_btn_color"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/colorTransparent"
            fancy:fb_focusColor="@color/login_btn_color"
            fancy:fb_radius="@dimen/small_margin"
            fancy:fb_text="Send Inquiry"
            fancy:fb_textColor="@color/login_btn_color" />

    </RelativeLayout>


</RelativeLayout>